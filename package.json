{
  "name": "slidev-subtitle",
  "private": true,
  "workspaces": [
    "examples/*",
    "docs"
  ],
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "oxlint",
    "fmt": "oxfmt --write .",
    "fmt:check": "oxfmt --check .",
    "check": "tsc --noEmit",
    "docs:dev": "yarn workspace slidev-subtitle-docs run dev",
    "docs:build": "yarn workspace slidev-subtitle-docs run prebuild && yarn workspace slidev-subtitle-docs run build",
    "docs:preview": "yarn workspace slidev-subtitle-docs run preview",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@types/node": "^22",
    "lefthook": "^1",
    "oxfmt": "latest",
    "oxlint": "^1",
    "typescript": "^5",
    "vitest": "^3"
  },
  "packageManager": "yarn@4.12.0"
}
